.warper
  .logo
    = link_to  "/" do
      = image_tag 'logo.png', width: '200', height: '60', class: 'logo-herder'
  .registration-main
    .registration-vontainer
      %h2.main-title
        発送元・お届け先住所
      = form_for @address do |f|
        = render "devise/shared/error_messages", resource: @address
        - required = '必須'
        - arbitrary = '任意'
        .form-group
          .field
            = f.label :first_name, 'お名前'
            %span.hissu #{required}
            %br/
            = f.text_field :first_name, placeholder: " 例) 山田 ", required: "", autocomplete: "family-name", class:'first_name_fill'
            %br/
            = f.text_field :family_name, placeholder: " 例) 綾 ", required: "", class: 'first_name_fill'

          .field
            = f.label :first_name_kana, 'お名前カナ'
            %span.hissu #{required}
            %br/
            = f.text_field :first_name_kana, placeholder: ' 例) ヤマダ', class: 'first_name_kana'
            %br/
            = f.text_field :family_name_kana, placeholder: ' 例) アヤ', class: 'first_name_kana'

          .field
            .post_coad
              = f.label :post_coad, '郵便番号'
              %span.hissu #{required}
              .post_coad_info
                = f.text_field :post_code, pattern: "^[0-9]{3}-[0-9]{4}$", required: "", placeholder: " 例) 123-4567 ", maxlength: "8", class: 'form-name'
          
          .field
            .prefecture
              = f.label :prefecture, '都道府県'
              %span.hissu #{required}
              .prefecture_filed
                = f.collection_select :prefecture_code, Prefecture.all, :id, :name, prompt: "--", class: 'prefecture_fill'

          .field
            .city
              = f.label :city, '市区町村'
              %span.hissu #{required}
              .city_info
                = f.text_field :city, placeholder: " 例) 横浜市緑区 ", required: "", class: "city_fill"

          .field
            .town
              = f.label :town, '番地'
              %span.hissu #{required}
              .town_info
                = f.text_field :town, placeholder: " 例) 青山1-1-1 ", required: "", class: "town_fill"
          
          .field
            .building
              = f.label :building, '建物名'
              %span.Any #{arbitrary}
              .building_info
                = f.text_field :building, placeholder: " 例) 柳ビル ", class: "building_fill"
          
          .field
            .tell
              = f.label :tell, '電話番号'
              %span.Any #{arbitrary}
              .tell_info
                = f.text_field :tell, placeholder: " 例) 09012345678", class: "tell_fill"

          .actions
            = f.submit "登録", class: "button"
  
  .logo
    = link_to  "/" do
      = image_tag 'logo-white.png', width: '200', height: '60', class: 'logo-footer'