.Top
  .Top__header
    = link_to  "#" do
      = image_tag 'logo.png', alt:"FURIMA", height: "100", width: "400"
    .Top__main
      .Top__panel
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .Top__no-account
            %p アカウントをお持ちでない方はこちら
            = link_to "新規会員登録", new_user_registration_path
          .Top__login
            .Top__Google
              = link_to "Googleでログイン", "#", class: "Top__Googlebtn"
            .Top__Facebook
              = link_to "Facebookでログイン", "#", class: "Top__Facebook"
            .Top__Apple
              = link_to "Appleでログイン", "#", class: "Top__Apple"
          .Top__bottom
            %br/
            .Top__email
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", required: "", class: "Top__email"
            %br/
            .Top__pass
              = f.password_field :password, autocomplete: "current-password", placeholder:"パスワード", required: "", class: "Top__pass"
            - if devise_mapping.rememberable?
              .field
                %br/
            .Top__form
              = f.submit "ログイン", class: "Top__form"
  
    .Footer
      %ul.Footer__datalis
        %li
          = link_to "プライバシーポリシー", "#"
        %li
          = link_to "FURIMA利用規約", "#"
        %li
          = link_to "特定商に関する表記", "#"
      
    = link_to  "#" do
      = image_tag 'logo-white.png', alt:"FURIMA", height: "100", width: "400"