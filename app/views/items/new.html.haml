              = f.label :delivery_date, '発送までの日数'
              %span.hissu #{required}
            %br/
            %select.delivery-date{name: "delivery-date"}
              %option{value: "選択してください"} 選択してください
              %option{value: "１〜２日で発送"} １~２日で発送
