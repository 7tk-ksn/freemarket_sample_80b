          %h2 ポイント
        .PointLevel
          %p 所持ポイント
          %p p0
        .PointBox     
          = link_to "#", class: "PointBtn" do 
            %p ポイント履歴
            %p >
        .PointBox    
          = link_to "#", class: "PointBtn" do  
            %p ポイント有効期限
            %p >
        .PointBox    
          = link_to "#", class: "PointBtn" do
            %p ポイントとは？
            %p >  
      .Profile
